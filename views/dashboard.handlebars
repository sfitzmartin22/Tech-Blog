<div class="container-dashboard-header">
    <div class="card">        
        <div class="card-header">
            <h1>Welcome to your personal dashboard {{blogs.username}}!</h1>
            <a href="/dashboard/blog/" button class="btn btn-primary" id="createblog">Click this button to create a new blog</a>
        </div>
    </div>
</div>        


{{#each blogs as |blog|}}
<div class="container">
    <div class="card">        
        <div class="card-header">
        <div class="description">Title</div>
            <h1 class="title">{{blog.title}}</h1>
        </div>
        <h2 class="card-subheader">{{blog.date}}</h2>
        <div class="description">Body</div>
        <p class="card-body">{{blog.body}}</p>
        <a href="/blogs/{{blog.id}}" class="btn btn-primary">View Full Blog</a>
        <a href="/blogs/edit/{{blog.id}}" id="edit" data-id="{{blog.id}}" class="btn btn-primary">Edit Blog</a>
        <button class="btn btn-primary" id="delete" data-id="{{blog.id}}">Delete Blog</a>
    </div>
</div>
{{/each}}


<script src="./js/delete.js"></script>>