<div class="blog-single">
    <div class="blog-single-header">
        <h1>{{blog.title}}</h1>
            <p>Posted by: {{user.username}} at {{blog.date}}</p>
    </div>
    <div class="blog-single-body">
        <h1>{{blog.body}}</h1>
    </div>
</div>

{{#each comments as |comment|}}
    <div class="body-single">
        <p class="text">{{comment.body}}</p>
        <p class="text">Posted by: {{user.username}} at {{comment.creation_date}}</p>
{{/each}}
    </div>

